<%= form_with(model: post) do |form| %>

  <div class="mb-3 form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
    <%= form.error_for :title, class: 'text-danger' %>
  </div>

  <div class="mb-3 form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
    <%= form.error_for :description, class: 'text-danger' %>
  </div>

  <div class="mb-3">
    <%= form.label :header_image %>
    <%= form.file_field :header_image, class: 'form-control' %>
    <div class="mt-1">
      <% if post.header_image.present? %>
        <small>Current image</small>
        <%= image_tag(post.header_image, width: '100%') %>
      <% end %>
    </div>
  </div>

  <div class="actions d-grid">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
